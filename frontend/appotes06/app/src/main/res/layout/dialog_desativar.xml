<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    android:paddingTop="16dp"
    android:paddingHorizontal="16dp"
    android:background="#FFFFFF"
    >

    <TextView
        android:id="@+id/tvMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="@string/desativar_perfil"
        android:textAlignment="center"
        android:textColor="@color/blue3"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvMessage_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/alert_desativar"
        android:textSize="18sp"
        android:textColor="@color/text2"
        android:layout_marginBottom="16dp"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/tvMessage_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/alert_desativar_2"
        android:textSize="18sp"
        android:textColor="@color/text2"
        android:layout_marginBottom="16dp"
        android:textAlignment="center"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="16dp">

        <Button
            android:id="@+id/buttonDesativar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/botao_selecionar"
            android:text="@string/btn_desativar"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:backgroundTint="@null"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteY="8dp" />

        <Button
            android:id="@+id/buttonCancelar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_border"
            android:text="@string/btn_cancelar"
            android:textAllCaps="false"
            android:textColor="@color/blue3"
            android:textSize="14sp"
            app:backgroundTint="@null"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/buttonDesativar"
            tools:layout_editor_absoluteY="56dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>
